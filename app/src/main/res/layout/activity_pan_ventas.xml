<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Spinner
        android:id="@+id/pymeSpinner"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <EditText
        android:id="@+id/saleQuantityEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Cantidad" />

    <EditText
        android:id="@+id/saleDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Descripción" />

    <EditText
        android:id="@+id/saleAmountEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Monto total" />

    <Button
        android:id="@+id/addSaleButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Añadir Venta" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/saleRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
